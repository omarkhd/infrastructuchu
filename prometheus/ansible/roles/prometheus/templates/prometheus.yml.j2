---
global:
  scrape_interval: 15s
  evaluation_interval: 15s

alerting:
  alertmanagers:
    - static_configs:
      - targets:
        - "127.0.0.1:9093"

scrape_configs:
  - job_name: prometheus
    static_configs:
      - targets:
        - "127.0.0.1:9090"
  - job_name: grafana
    static_configs:
      - targets:
        - "127.0.0.1:3000"
  - job_name: prometheus_vm
    static_configs:
      - targets:
        - "127.0.0.1:9100"

